<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_getNo"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="#66"
            android:textSize="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical|left"
            android:text="订单已确定"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_getName_cus"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="宋宝宝"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_getSex_Cus"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="先生"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_getNo_phone_cus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13751224343"
                android:textSize="22dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_getAddress_cus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            android:text="北京市丰台区群芳公寓"
            android:textSize="23dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="配送员电话:"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_getNo_phone_peisyuan"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="6dp"
                android:text="未分配"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="期望送达时间:"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_getTime_hope"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="6dp"
                android:text="12月2日    11:30"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="订单备注:"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_getBeizhu_dingdan"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="6dp"
                android:text="一定要准时哟"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="下单时间:"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_getTime_xiadan"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="6dp"
                android:text="12月2日    10:20"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="接单时间:"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_getTime_jiedan"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="6dp"
                android:text="12月2日    10:24"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="订单编号:"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_getNo_dingdan"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="6dp"
                android:text="118807245"
                android:textSize="22dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="190dip"
        android:gravity="center"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_lijichuli"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.31"
            android:gravity="center"
            android:text="立即处理"
            android:textSize="20dp"
            android:onClick="Chuli"/>
    </LinearLayout>
</LinearLayout>

